@model Inmueble;

@{
    ViewData["Title"] = "Editar";



    var ltaPropietarios = (List<Propietario>)ViewBag.Propietarios;



    var ltaTipoInmuebles = (List<TipoInmueble>)ViewBag.TipoInmuebles;
}

@if (TempData["Error"] != null)



{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My Application</title>

    <!-- Incluir Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" />
</head>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <div class="form-group">
                <label asp-for="Direccion"></label>
                <input asp-for="Direccion" class="form-control" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>

    <div class="form-group">
    <label asp-for="id_tipoInmueble">Tipo de Inmueble</label>
    <select asp-for="id_tipoInmueble" class="form-control">
        <option value="">Seleccione un tipo de inmueble</option>
        @foreach (var tipo in ltaTipoInmuebles)
        {
            <option value="@tipo.id_tipoInmueble">
                @tipo.tipoNombre
            </option>
        }
    </select>
    <span asp-validation-for="id_tipoInmueble" class="text-danger"></span>
</div>
            <div class="form-group">
                <label asp-for="Uso">Uso</label>
                <select asp-for="Uso" class="form-control">
                    <option value="">Seleccionar Uso</option>
                    <option value="Comercial">Comercial</option>
                    <option value="Residencial">Residencial</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Ambientes"></label>
                <input asp-for="Ambientes" class="form-control" type="number" />
                <span asp-validation-for="Ambientes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Latitud"></label>
                <input asp-for="Latitud" class="form-control" type="number" step="any" />
                <span asp-validation-for="Latitud" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Longitud"></label>
                <input asp-for="Longitud" class="form-control" type="number" step="any" />
                <span asp-validation-for="Longitud" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Precio"></label>
                <input asp-for="Precio" class="form-control" type="number" step="any" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Propietario</label>
                <select class="form-control" name="id_propietario">
                    @foreach (var item in ltaPropietarios)

                    {
                        <option value="@item.id_propietario">@item.Apellido @item.Nombre (@item.Dni)</option>
                    }
                </select>
                <span asp-validation-for="id_propietario" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>
